if has("gui_macvim")
  set guifont=Sauce\ Code\ Powerline:h14
  macmenu Window.Toggle\ Full\ Screen\ Mode key=<D-CR>
  macmenu File.New\ Tab key=<D-T>
  map <D-t> :CtrlP<cr>
  imap <D-t> <Esc>:CtrlP<cr>
  map <D-F> :Ack!<space>
  imap <D-F> <Esc>:Ack!<space>

  " Command-][ to increase/decrease indentation
  vmap <D-]> >gv
  vmap <D-[> <gv

  set bg=dark
  set guioptions-=L
  set guioptions-=r
  set guioptions-=T
endif

